<div class="mt-5 " style="height:500px">
    <div class="my-5">
        <h4><label for="title">Post Title</label></h4>
        <input required class="form-control" name="title" id="title" type="text">
    </div>
  <div class="my-5">
        <h4><label for="description">A short post description:</label></h4>
        <input required class="form-control" type="text" name="description" id="description" maxlength="100">
        <div class="d-flex justify-content-end">
            <p style="color:grey">*100 word limit</p>
        </div>
    </div>
  <div class="my-5">
        <h4><label for="content">Post content:</label></h4>
        <textarea required class="form-control" name="content" id="content" cols="30" rows="10" style="min-height: 100px;max-height:200px"></textarea>
    </div>
    <div class="d-flex justify-content-end">
        <a href="/" class="btn btn-secondary ml-2 mr-0">Cancel</a>
        <button type="submit" class="btn btn-primary mx-2">Save</button>
    </div>
</div>